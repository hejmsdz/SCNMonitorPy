#!/usr/bin/env python3

import argparse
import logging
import os
import sys

# the package lives the parent directory, this trick lets us import it
main_dir = os.path.dirname(sys.path[0])
sys.path.insert(1, main_dir)

import scnmonitor

def parse_args():
    parser = argparse.ArgumentParser()
    parser.add_argument('-v', action="count", help="control verbosity (-v for info, -vv for debug)")
    return parser.parse_args()

def configure_logging(verbosity):
    if verbosity == 0:
        level = logging.WARNING
    elif verbosity == 1:
        level = logging.INFO
    elif verbosity >= 2:
        level = logging.DEBUG

    master_log = logging.getLogger()
    master_log.setLevel(level)

    formatter = logging.Formatter("%(asctime)s  %(levelname)-8s %(name)-24s %(message)s", "%H:%M:%S")
    ch = logging.StreamHandler()
    ch.setLevel(level)
    ch.setFormatter(formatter)
    master_log.addHandler(ch)

def main():
    client = scnmonitor.SCNClient()
    client.check()

    print("Download: {:.2f} GB".format(client.download))
    print("Upload:   {:.2f} GB".format(client.upload))
    print("Total:    {:.2f} GB".format(client.total))
    print("Usage:    {}%".format(client.percentage))

if __name__ == '__main__':
    args = parse_args()
    configure_logging(args.v)

    main()
